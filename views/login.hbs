<h1>Login</h1>
<form action="/auth/login" method="POST">
    <label for="email">Email:</label>
    <input type="email" name="email">

    <label for="password">Password:</label>
    <input type="password" name="password">

    <button type="submit">Send</button>
</form>

{{#if errorMessage}}
<p>{{errorMessage}}</p>
{{/if}}